@model IEnumerable<FST.ActivationWebApp.Data.Entities.ProgramTool>

@{
    ViewData["Title"] = "Program keys";
}

<style>
    a.btn {
        margin: 2px 5px;
        max-height: 38px;
    }
</style>

<h1>Program tools</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New</a>
</p>
<table id="program-tools-table" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Key
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="text-align: center; ">
                <a class="btn btn-outline-success" style="width: 123px" asp-action="Index" asp-route-programToolId="@item.Id" asp-controller="ActivationKey">Program keys</a>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
    $(document).ready( function () {
        $('#program-tools-table').DataTable();
    } );
</script>